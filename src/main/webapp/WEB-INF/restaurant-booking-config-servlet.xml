			value="com.mysql.cj.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://us-cdbr-east-03.cleardb.com/heroku_9339a0a62398a4b?reconnect=true"></property>
		<property name="username" value="be7e348daf0523"></property>
		<property name="password" value="19ace7a8 "></property>
	</bean>
	<bean id="jdbcTemplate"
		class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<mvc:annotation-driven />
	<mvc:resources mapping="/assets/**" location="/assets/" />
</beans>