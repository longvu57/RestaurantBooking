<decorators defaultdir="/WEB-INF/views/layouts">
	<decorator name="user" page="user.jsp">
		<pattern>/*</pattern>
	</decorator>
	<decorator name="userLogin" page="userLogin.jsp">
		<pattern>/login*</pattern>
	</decorator>
	<decorator name="userRegister" page="userRegister.jsp">
		<pattern>/register*</pattern>
	</decorator>
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="adminLogin" page="adminLogin.jsp">
		<pattern>/admin/login</pattern>
	</decorator>
</decorators>